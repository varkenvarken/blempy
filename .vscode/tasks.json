{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run benchmarks",
            "type": "shell",
            "command": "pytest tests --benchmark-autosave --benchmark-only "
        },
        {
            "label": "Swap HTML Head with Template",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/bin/headswap.py",
                "${file}",
                "${workspaceFolder}/docs/header.template"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}